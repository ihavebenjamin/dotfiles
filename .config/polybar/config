;;;}}}

;;;{{{MAILBOx
[module/mailbox]
type = custom/script
format = %{A1:$TERMINAL -e neomutt &:}%{A2:setsid mailsync >/dev/null &:}<label>%{A}%{A}
exec = ~/.local/bin/statusbar/mailbox
label = %output%
tail = false
;;;}}}

;;;{{{WEATHER
[module/weather]
type = custom/script
format = <label>
exec = curl -s wttr.in/Phoenix?format="+%c+%t"
label = %output%
interval = 600
;;;}}}

;;;{{{INTERNET
[module/internet]
type = custom/script
format = %{A1:$TERMINAL -e nmtui &:}<label>%{A}
exec = ~/.local/bin/statusbar/internet
label = %output%
tail = false
;;;}}}

;;;{{{DATE
[module/date]
